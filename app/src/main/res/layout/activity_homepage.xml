<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".HomePageActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--FOTO BACKGROUND DAN DESIGN VECTOR -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView5_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bcg_2"
            android:layout_marginTop="150sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        </com.google.android.material.imageview.ShapeableImageView>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vec3_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        </com.google.android.material.imageview.ShapeableImageView>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vec3_4"
            android:layout_marginTop="50sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </com.google.android.material.imageview.ShapeableImageView>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vec3_5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        </com.google.android.material.imageview.ShapeableImageView>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vec3_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        </com.google.android.material.imageview.ShapeableImageView>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vec3_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        </com.google.android.material.imageview.ShapeableImageView>

        <!--HAMBURGER MENU NAVIGATION-->
        <ImageButton
            android:id="@+id/hamburger1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90sp"
            android:background="@drawable/toolbar_homepage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <!--FOOTER DESIGN -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableVectorViewFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vec3_6"
            android:layout_marginTop="1300dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        </com.google.android.material.imageview.ShapeableImageView>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vec3_7"
            android:layout_marginBottom="237dp"
            android:layout_marginEnd="210dp"
            app:layout_constraintBottom_toBottomOf="@id/shapeableVectorViewFooter"
            app:layout_constraintEnd_toEndOf="parent">
        </com.google.android.material.imageview.ShapeableImageView>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vec3_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        </com.google.android.material.imageview.ShapeableImageView>


        <!--UCAPAN SELAMAT + EMAIL + FOTO PROFIL -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView5_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="69sp"
            android:layout_marginHorizontal="25sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/circular"
            app:strokeColor="#000000"
            app:strokeWidth="0dp"
            app:srcCompat="@drawable/foto_iyash">
            </com.google.android.material.imageview.ShapeableImageView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginStart="15sp"
            app:layout_constraintTop_toTopOf="@+id/shapeableImageView5_2"
            app:layout_constraintStart_toEndOf="@+id/shapeableImageView5_2"
            android:fontFamily="@font/montserrat_medium"
            android:text="Selamat Pagi"
            android:textColor="#FFFFFF"
            android:textSize="9pt"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2sp"
            android:layout_marginStart="15sp"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            app:layout_constraintStart_toEndOf="@+id/shapeableImageView5_2"
            android:fontFamily="@font/montserrat_bold"
            android:text="Ghiyas Fazri"
            android:textColor="#FFFFFF"
            android:textSize="10pt"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2sp"
            android:layout_marginStart="15sp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/shapeableImageView5_2"
            android:fontFamily="@font/montserrat_regular"
            android:text="ghiyas.fazri@gmail.com"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>
        
        <!--SLIDER ON JAVA & IMAGE SOURCENYA DI JAVA ACTIVITY -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerSlider5_1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="260sp"
            android:paddingHorizontal="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        </androidx.viewpager2.widget.ViewPager2>

        <!--CARDVIEW + BUTTON -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5_1"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginHorizontal="17dp"
            android:layout_marginTop="25sp"
            android:elevation="50dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toBottomOf="@id/viewPagerSlider5_1"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/roundedImageView5_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/foto_gunung_aqua"
                android:background="@color/white"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <!--Text untuk CARD VIEW DOUBLE-->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Vaganza Fiesta"
            android:textAlignment="textStart"
            android:textColor="#4D4D4D"
            android:textSize="11pt"
            app:layout_constraintTop_toBottomOf="@id/cardView5_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--CARDVIEW DOUBLE LINE + BUTTON ADD #1-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5_5"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10sp"
            android:elevation="50dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toBottomOf="@id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cardView5_6">

            <ImageView
                android:id="@+id/roundedImageView5_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/foto_gunung_aqua"
                android:background="@color/white"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5_6"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:layout_marginHorizontal="17dp"
            android:layout_marginTop="10sp"
            android:elevation="50dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toBottomOf="@id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardView5_5">

            <ImageView
                android:id="@+id/roundedImageView5_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/foto_gunung_aqua"
                android:background="@color/white"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <!--CARDVIEW DOUBLE LINE + BUTTON ADD #2-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5_7"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="20sp"
            android:elevation="50dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toBottomOf="@id/cardView5_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cardView5_8">

            <ImageView
                android:id="@+id/roundedImageView5_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/foto_gunung_aqua"
                android:background="@color/white"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5_8"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:layout_marginHorizontal="17dp"
            android:layout_marginTop="20sp"
            android:elevation="50dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toBottomOf="@id/cardView5_6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardView5_7">

            <ImageView
                android:id="@+id/roundedImageView5_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/foto_gunung_aqua"
                android:background="@color/white"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <!--Text untuk CARD VIEW FOOTER-->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Hadiah Menarik"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:textSize="11pt"
            app:layout_constraintTop_toBottomOf="@id/cardView5_7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5_9"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginHorizontal="17dp"
            android:layout_marginTop="10sp"
            android:elevation="50dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toBottomOf="@id/textView5"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/roundedImageView5_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/foto_gunung_aqua"
                android:background="@color/white"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

    <com.google.android.material.navigation.NavigationView
        app:itemTextAppearance="@style/NavViewTextStyle"
        android:id="@+id/nav_view1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:visibility="invisible"
        app:menu="@menu/nav_menuhomepage"/>

</androidx.drawerlayout.widget.DrawerLayout>