<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/regispage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    tools:context=".RegisPageActivity">


<androidx.constraintlayout.widget.ConstraintLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/linear3_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50sp"
        android:layout_marginHorizontal="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0">

        <!--BACK BUTTON -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/backtologinbtn"
            android:onClick="login"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic5_left_arrow"
            android:background="@drawable/button_style_backarrow_1"/>


        <!--TEXT REGISTER -->
        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45sp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Register"
            android:textAlignment="center"
            android:textColor="#4D4D4D"
            android:textSize="15pt"/>


        <!--FORM REGISTER -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45sp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Nama Lengkap"
            android:textColor="#4D4D4D"
            android:textSize="10pt"/>

        <EditText
            android:id="@+id/userregispage"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="2sp"
            android:background="@drawable/textfill_style_1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:drawableStart="@drawable/ic10_user"
            android:drawablePadding="10dp"
            android:textSize="8pt"
            android:inputType="text"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Email"
            android:textColor="#4D4D4D"
            android:textSize="10pt"/>

        <EditText
            android:id="@+id/emailregispage"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="2sp"
            android:background="@drawable/textfill_style_1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:drawableStart="@drawable/ic6_email"
            android:drawablePadding="10dp"
            android:textSize="8pt"
            android:inputType="textEmailAddress"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Kata Sandi"
            android:textColor="#4D4D4D"
            android:textSize="10pt"/>

        <EditText
            android:id="@+id/passregispage"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="2sp"
            android:background="@drawable/textfill_style_1"
            android:paddingStart="25dp"
            android:drawableStart="@drawable/ic7_lock_pass"
            android:paddingEnd="15dp"
            android:drawableEnd="@drawable/ic8_passhide"
            android:drawablePadding="10dp"
            android:textSize="8pt"
            android:inputType="textPassword"
            android:longClickable="true"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Konfirmasi Kata Sandi"
            android:textColor="#4D4D4D"
            android:textSize="10pt"/>

        <EditText
            android:id="@+id/passconfregispage"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="2sp"
            android:background="@drawable/textfill_style_1"
            android:paddingStart="25dp"
            android:drawableStart="@drawable/ic7_lock_pass"
            android:paddingEnd="15dp"
            android:drawableEnd="@drawable/ic8_passhide"
            android:drawablePadding="10dp"
            android:textSize="8pt"
            android:inputType="textPassword"
            android:longClickable="true"/>

    </LinearLayout>


    <!--BUTTON REGIS TO MAIN PAGE -->
    <LinearLayout
        android:id="@+id/linear3_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="90sp"
        android:layout_marginBottom="70sp"
        app:layout_constraintTop_toBottomOf="@id/linear3_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/regisuserbtn"
            android:onClick="homepage"
            android:layout_width="340dp"
            android:layout_height="80dp"
            android:background="@drawable/button_style_2"
            android:text="Register"
            android:fontFamily="@font/montserrat_medium"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="11pt" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>